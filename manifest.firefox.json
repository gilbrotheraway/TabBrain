{
  "manifest_version": 3,
  "name": "TabBrain",
  "description": "AI-powered tab and bookmark organizer",
  "version": "1.0.0",
  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Open TabBrain sidebar"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "sidebar_action": {
    "default_title": "TabBrain",
    "default_panel": "src/sidepanel/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["src/background/index.js"],
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "alarms"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "tabbrain@extension.local",
      "strict_min_version": "109.0"
    }
  },
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://api.deepseek.com/*",
    "https://api.together.xyz/*",
    "https://openrouter.ai/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ]
}
