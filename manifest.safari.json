{
  "manifest_version": 3,
  "name": "TabBrain",
  "description": "AI-powered tab and bookmark organizer",
  "version": "1.0.0",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+T"
      },
      "description": "Open TabBrain"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Open TabBrain"
  },
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "alarms"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://api.deepseek.com/*",
    "https://api.together.xyz/*",
    "https://openrouter.ai/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ]
}
